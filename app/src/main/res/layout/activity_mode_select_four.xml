<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.mode.ModeSelectOneActivity">
    <!--    <com.ss.apidemo.view.MergerStatus-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="45dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:background="@mipmap/ic_mode_four_top_bg"
            android:src="@mipmap/ic_mode_four_top_back" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_marginRight="45dp"
            android:id="@+id/iv_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:background="@mipmap/ic_mode_four_top_bg"
            android:src="@mipmap/ic_mode_four_top_main" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:gravity="center"
            android:background="@mipmap/ic_mode_four_top_bg"
            android:orientation="vertical">
            <View
                android:id="@+id/vv_bg1"
                android:layout_margin="35dp"
                android:background="@drawable/mode_four_bt_unselect_corners"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:lines="1"
                android:id="@+id/tv_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="tabClick"
                android:text="@string/expert_str"
                android:textColor="@color/mode_four_bt_unselect"
                android:textSize="35sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:gravity="center"
            android:background="@mipmap/ic_mode_four_top_bg"
            android:orientation="vertical">
            <View
                android:id="@+id/vv_bg2"
                android:layout_margin="35dp"
                android:background="@drawable/mode_four_bt_unselect_corners"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:lines="1"
                android:id="@+id/tv_select2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="tabClick"
                android:text="@string/smart_str"
                android:textColor="@color/mode_four_bt_unselect"
                android:textSize="35sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>