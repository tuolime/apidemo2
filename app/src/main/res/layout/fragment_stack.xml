<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bt_gray"
                android:text="@string/fluence"/>
            <TextView
                android:id="@+id/tv_fluence"
                android:gravity="center"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColor="@color/fluence"
                android:text="01"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bt_gray"
                android:text="J"/>
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_fluence_up"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/up_circle_bg" />


            <SeekBar
                android:layout_centerInParent="true"
                android:rotation="-90"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:id="@+id/sb_fluence"
                android:max="10"
                android:thumbOffset="3dp"
                android:splitTrack="false"
                android:progressDrawable="@drawable/seekbar_fluence"
                android:thumb="@drawable/seekbar_thumb_fluence"
                android:progress="0">
            </SeekBar>
<!--            <acffo.xqx.blejsq.widget.VerticalSeekBar2-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_weight="2"-->
<!--                android:layout_width="20dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:id="@+id/sb_fluence"-->
<!--                android:max="10"-->
<!--                android:thumbOffset="0dp"-->
<!--                android:splitTrack="false"-->
<!--                android:progressDrawable="@drawable/seekbar_fluence"-->
<!--                android:thumb="@drawable/seekbar_thumb_fluence"-->
<!--                android:progress="0">-->
<!--            </acffo.xqx.blejsq.widget.VerticalSeekBar2>-->

            <ImageView
                android:id="@+id/iv_fluence_down"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:src="@drawable/down_circle_bg" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_trio"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/trio"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_stack"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
<!--            android:background="@mipmap/ic_stack_2"-->
        </RelativeLayout>

        <LinearLayout
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bt_gray"
                android:text="@string/energy"/>
            <TextView
                android:id="@+id/tv_energy"
                android:gravity="center"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColor="@color/energy"
                android:text="01"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bt_gray"
                android:text="kJ"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_burst"
                android:gravity="center"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColor="@color/fluence"
                android:text="01"/>
            <TextView
                android:id="@+id/tv_burst_unit"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bt_gray"
                android:text="J(BURST)"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
