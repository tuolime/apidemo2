<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:onClick="mainClick"
            android:id="@+id/iv_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@mipmap/ic_main" />

        <ImageView
            android:onClick="mainClick"
            android:id="@+id/iv_main_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:src="@mipmap/ic_work_one_back"
            />

        <ImageView
            android:onClick="mainClick"
            android:id="@+id/iv_main_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:src="@mipmap/ic_main_setting" />

<!--        <ImageView-->
<!--            android:onClick="mainClick"-->
<!--            android:id="@+id/iv_main_upload"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_marginTop="100dp"-->
<!--            android:gravity="center"-->
<!--            android:src="@mipmap/ic_main_upload"-->
<!--            />-->
    </LinearLayout>
</LinearLayout>
