            android:layout_marginLeft="45dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_mode_back_one" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_marginRight="45dp"
            android:id="@+id/iv_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_main_one" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/skin_tyoe"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_skin_1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_one_skin1_unselect_corners"
                android:onClick="tabClick"
                android:textColor="@color/white" />
            <TextView
                android:onClick="tabClick"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/skin_1"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_skin_2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/mode_one_skin2_unselect_corners"
                android:onClick="tabClick"
                android:textColor="@color/white" />
            <TextView
                android:onClick="tabClick"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/skin_2"/>
