                android:layout_height="wrap_content"
                android:background="@mipmap/ic_one_select"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_body_armpit"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:background="@drawable/mode_one_body_unselect_corners"
                android:onClick="bodyClick"
                android:src="@mipmap/ic_mode_one_body_armpit"
                android:textColor="@color/white" />
            <ImageView
                android:visibility="invisible"
                android:onClick="bodyClick"
                android:id="@+id/iv_body_armpit_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_one_select"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_body_waist"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:background="@drawable/mode_one_body_unselect_corners"
                android:onClick="bodyClick"
                android:src="@mipmap/ic_mode_one_body_waist"
                android:textColor="@color/white" />
            <ImageView
                android:visibility="invisible"
                android:onClick="bodyClick"
                android:id="@+id/iv_body_waist_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_one_select"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_body_back"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:background="@drawable/mode_one_body_unselect_corners"
                android:onClick="bodyClick"
                android:src="@mipmap/ic_mode_one_body_back"
                android:textColor="@color/white" />
            <ImageView
