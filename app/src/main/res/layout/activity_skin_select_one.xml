            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_body_bikini"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:background="@drawable/mode_one_body_unselect_corners"
                android:onClick="bodyClick"
                android:src="@mipmap/ic_mode_one_body_bikini"
                android:textColor="@color/white" />
            <ImageView
                android:visibility="invisible"
                android:onClick="bodyClick"
                android:id="@+id/iv_body_bikini_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_one_select"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_skin_ok"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/mode_one_skin1_style_corners"
            android:onClick="tabClick"
            android:text="@string/tv_mode_one_ok"
            android:textColor="@color/mode_one_skin1_bt" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/tv_skin_cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/mode_one_skin1_style_corners"
            android:onClick="tabClick"
            android:text="@string/tv_mode_one_cancel"
            android:textColor="@color/mode_one_skin1_bt" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
    </LinearLayout>
