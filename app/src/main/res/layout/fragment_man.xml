<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/man" />
            <ImageView
                android:id="@+id/iv_man_armpit"
                android:layout_marginTop="62dp"
                android:layout_marginLeft="70dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_7" />
            <ImageView
                android:id="@+id/iv_man_chest"
                android:layout_marginTop="55dp"
                android:layout_centerHorizontal="true"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_1" />
            <ImageView
                android:id="@+id/iv_man_abdomen"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_2" />
            <ImageView
                android:id="@+id/iv_man_Bikini"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_3" />
            <ImageView
                android:id="@+id/iv_man_thigh"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="133dp"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_4" />
            <ImageView
                android:id="@+id/iv_man_knee"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="90dp"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_5" />
            <ImageView
                android:id="@+id/iv_man_leg"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="143dp"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_6" />

            <ImageView
                android:id="@+id/iv_man_hand"
                android:layout_marginTop="114dp"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_8" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
