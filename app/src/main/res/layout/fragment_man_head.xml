<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_head" />

            <ImageView
                android:id="@+id/iv_man_head_forehead"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_head_1" />
            <ImageView
                android:id="@+id/iv_man_head_cheek"
                android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_head_2" />
            <ImageView
                android:id="@+id/iv_man_head_lip"
                android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_head_3" />
            <ImageView
                android:id="@+id/iv_man_head_neck"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/man_head_4" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
