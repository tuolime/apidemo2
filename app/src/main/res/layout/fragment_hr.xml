            <!--                    android:splitTrack="false"-->
            <!--                    android:progressDrawable="@drawable/seekbar_fluence"-->
            <!--                    android:thumb="@drawable/seekbar_thumb_fluence"-->
            <!--                    android:progress="0">-->
            <!--                </acffo.xqx.blejsq.widget.VerticalSeekBar>-->

            <SeekBar
                android:id="@+id/sb_frequency"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:max="10"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_fluence"
                android:rotation="-90"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb_fluence"
                android:thumbOffset="3dp"></SeekBar>

        </RelativeLayout>
